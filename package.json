{
  "name": "lcbuffer",
  "version": "1.0.0",
  "type": "module",
  "description": "Lightweight, efficient, and flexible line-based buffer management library for JavaScript and TypeScript, supporting references, events, and thread-safe operations.",
  "types": "dist/main.d.ts",
  "main": "dist/main.cjs",
  "module": "dist/main.mjs",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "require": "./dist/main.cjs",
      "import": "./dist/main.mjs"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "test": "vitest .",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0",
    "format": "prettier --write \"./**/*.{md,json,js,ts}\""
  },
  "keywords": [
    "buffer",
    "line-based",
    "reference",
    "event-driven",
    "typescript",
    "javascript",
    "mutex",
    "thread-safe",
    "content-management",
    "library"
  ],
  "author": "E. M. Santos <contact@supitsdu.me>",
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "rollup": "^4.45.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4",
    "rollup-plugin-bundlens": "^0.1.1",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-esbuild": "^6.2.1"
  },
  "dependencies": {
    "async-mutex": "latest"
  }
}
